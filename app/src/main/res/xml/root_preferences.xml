<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_settings_24"
        app:title="General">

        <ListPreference
            app:defaultValue="updated"
            app:entries="@array/sort_entries"
            app:entryValues="@array/sort_values"
            app:key="sort_by"
            app:title="@string/sort_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="JetBrains"
            app:entries="@array/organization_entries"
            app:entryValues="@array/organization_values"
            app:key="organization"
            app:title="@string/organization"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>